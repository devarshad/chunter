<form name="form" ng-submit="addUser()" novalidate>
    <div class="container body-content chat-container-content">
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Your full name" ng-model="user.name" required>
            <span class="error" ng-show="(form.$submitted || form.name.$touched ) && form.name.$error.required">
                Name is required.
            </span>
        </div>
        <div class="form-group">
            <input type="email" ng-model="user.email" class="form-control" name="email" ng-pattern="/^[a-z]+[a-z0-9._]+@('@')[a-z]+\.[a-z.]{2,5}$/" placeholder="Email address" required>
            <span class="error" ng-show="(form.$submitted || form.email.$touched ) && form.email.$error.required">
                Email is required.
            </span>
            <span class="error" ng-show="form.email.$error.pattern">
                Email is not valid.
            </span>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="mobile" ng-pattern="/^(?:(?:\+|0{0,2})91(\s*[\-]\s*)?|[0]?)?[789]\d{9}$/" placeholder="Your mobile number" ng-model="user.mobile" required>
            <span class="error" ng-show="(form.$submitted || form.mobile.$touched ) && form.mobile.$error.required">
                Mobile number is required.
            </span>
            <span class="error" ng-show="form.mobile.$error.pattern">
                Mobile number is not valid.
            </span>
        </div>
    </div>
    <message-box></message-box>
</form>